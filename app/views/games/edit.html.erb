<% if @game.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @game.errors.full_messages.each do |error| %>
        <li>
          <%=error %>
        </li>
      <% end %>
    </ul>
<%end %>
</div>

<div class="card">
  <div class="card-header"><%= @game.new_record? ? 'New' : 'Edit' %> Game</div>
  <div class="card-body">
    <%=simple_form_for @game do |f| %>
      <%= f.input :name %>
      <%= f.input :category %>
      <%= f.input :release_date %>
      <hr>
      <%= f.input :description %>
      <%= f.button :submit, "Save", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>