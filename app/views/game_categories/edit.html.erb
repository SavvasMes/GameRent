<% if @game_category.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @game_category.errors.full_messages.each do |error| %>
        <li>
          <%=error %>
        </li>
      <% end %>
    </ul>
  </div>

<%end %>

<div class="card">
  <div class="card-header"><%= @game_category.new_record? ? 'New' : 'Edit' %> Game_Category</div>
  <div class="card-body">
    <%=simple_form_for @game_category do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.button :submit, "Save", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>